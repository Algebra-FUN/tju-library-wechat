.sv-box{
  width:750rpx;
  height:100rpx;
  background-color: #e53935;
  display: flex;
  justify-content: space-around;
}

.sv-input{
  border: none;
  border-radius: 40rpx;
  width:500rpx;
  height:60rpx;
  margin-top:5rpx;
  margin-bottom:25rpx;
  margin-left:30rpx;
  background-color: white;
  text-align: center;
  font-size:30rpx;
}

.sv-button{
  border: none;
  border-radius: 40rpx;
  width:150rpx;
  height:60rpx;
  margin-top:5rpx;
  margin-bottom:25rpx;
  margin-right:30rpx;
  font-size:25rpx;
  color:white;
  background-color: rgb(0,122,204);
  animation-fill-mode: forwards;
}

.sv-button-ani{
  animation: sv-bn-ani ease-in-out .6s;
}

@keyframes sv-bn-ani{
  0%{
    width:150rpx;
    height:60rpx;
    margin-top:5rpx;
    margin-bottom:25rpx;
    margin-right:30rpx;
    font-size:25rpx;
  }
  50%{
    width:120rpx;
    height:50rpx;
    margin-top:12rpx;
    margin-bottom:35rpx;
    margin-right:45rpx;
    font-size:20rpx;
  }
  100%{
    width:150rpx;
    height:60rpx;
    margin-top:5rpx;
    margin-bottom:25rpx;
    margin-right:30rpx;
    font-size:25rpx;
  }
}